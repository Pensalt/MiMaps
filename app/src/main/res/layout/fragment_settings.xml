<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slateBG"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <ImageView
        android:id="@+id/logoSI"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:contentDescription="logo"
        android:src="@drawable/compass" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:text="Profile Settings"
        android:textColor="@color/white"
        android:textAlignment="center">
    </TextView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/userNameET_settings"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:background="@color/cardview_dark_background"
            android:hint="Userame"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/emailET_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:background="@color/cardview_dark_background"
            android:hint="Email Address"/>

    </com.google.android.material.textfield.TextInputLayout>

            <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Switch
        android:id="@+id/swUnitsPrefs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="15dp"
        android:text="@string/metric_imperial_heading"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:thumbTint="@color/colorPrimaryDark"
        android:trackTint="@color/colorPrimary"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <Button
        android:id="@+id/btnLogout"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:layout_gravity="center"
        android:background="@drawable/roundedbuttons"
        android:gravity="center"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottm_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        android:background="@color/slateBG"
        app:itemIconTint="@color/buttons"
        app:itemTextColor="@color/buttons" />


</LinearLayout>